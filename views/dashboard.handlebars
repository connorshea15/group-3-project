<h1>
  Hello {{user.username}}!
</h1>

<img src="{{user.image}}" style="width:150px;height:150px;"></img>

<h4>Home Base:</h4>
<h5>{{user.city}}</h5>



{{#if user.posts.length}}
<section>
  <h2>Your Posts</h2>
    {{#each user.posts as |post|}}
      {{> dashboard-postinfo post}}
    {{/each}}

</section>
{{/if}}

<button type="submit" class="btn"><a class="link" href="/dashboard/new">+ New Post</a></button>

{{#if posts.length}}
<script src="/javascript/add-post.js"></script>
{{/if}}